@model List<WebAdminUI.Areas.ElectronicDegree.Models.Majors.MajorsViewModel>

@{
    ViewBag.Title = WebAdminUI.Resources.ElectronicDegree.Major.lblMajors;
}

<br />
<div class="esg-page-header">
    <h1 class="esg-page-header__title">@WebAdminUI.Resources.ElectronicDegree.Major.lblMajors</h1>
    <br />
</div>
<br />
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="esg-breadcrumb">
        <ol class="esg-breadcrumb__list">
            <li class="esg-breadcrumb__list-item"><a class="esg-breadcrumb__link" href="#">@WebAdminUI.Resources.ElectronicDegree.Signer.lblAcademicRecord</a></li>
            <li class="esg-breadcrumb__list-item"><a class="esg-breadcrumb__link" href="@Url.Action("Menu", "Menu")" )">@WebAdminUI.Resources.ElectronicDegree.Signer.lblElectronicDegree</a></li>
            <li class="esg-breadcrumb__list-item"><a class="esg-breadcrumb__link" href="@Url.Action("Index", "Setup")" )">@WebAdminUI.Resources.ElectronicDegree.Signer.lblSetup</a></li>
            <li class="esg-breadcrumb__list-item esg-is-active"> @WebAdminUI.Resources.ElectronicDegree.Major.lblMajors</li>
        </ol>
    </div>
</div>
<div id="formMajors" class="esg-card--panel">

    @if (Model.Count > 0)
    {
        <br />
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align:end; margin-right:1rem">
            <button id="btnAddMajor" type="button" class="esg-button esg-button esg-button--medium ">
                <span class="esg-button__icon esg-icon__container" aria-hidden="true">
                    <svg class="esg-icon esg-icon--left">
                        <use xlink:href="#icon-add"></use>
                    </svg>
                </span>
            </button>
        </div><br />
        <div class="esg-card--panel__body">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="esg-table__container">
                    <table id="majors_table" class="esg-table">
                        <thead class="esg-table-head">
                            <tr class="esg-table-head__row">
                                <th class="esg-table-head__th">@Html.DisplayNameFor(m => m[0].Cve)</th>
                                <th class="esg-table-head__th" style="width:20%">@Html.DisplayNameFor(m => m[0].MajorName)</th>
                                <th class="esg-table-head__th" style="width:20%">@Html.DisplayNameFor(m => m[0].EducationLevel)</th>
                                <th class="esg-table-head__th" style="width:15%">@Html.DisplayNameFor(m => m[0].Institutions)</th>
                                <th class="esg-table-head__th">@WebAdminUI.Resources.ElectronicDegree.Major.lblEdit</th>
                                <th class="esg-table-head__th">@WebAdminUI.Resources.ElectronicDegree.Major.lblDelete</th>
                            </tr>
                        </thead>
                        <tbody class="esg-table-body" id="signers_table_rows_tbody">
                            @for (var i = 0; i < Model.Count; i++)
                            {
                                var Signers = Model[i];
                                <tr class="esg-table-body__row" id="@i">
                                    <td class="esg-table-body__td">
                                        @Html.Label("lblCve", Model[i].Cve.ToString(), new { @id = Model[i].Cve })
                                    </td>
                                    <td class="esg-table-body__td">
                                        @Html.Label("lblMajorName", Model[i].MajorName)
                                    </td>
                                    <td class="esg-table-body__td">
                                        @Html.Label("lblEducationLevel", Model[i].EducationLevel)
                                    </td>
                                    <td class="esg-table-body__td">
                                        @Html.Label("lblInstitutions", Model[i].Institutions)
                                    </td>
                                    <td class="esg-table-body__td">
                                        @Html.HiddenFor(m => Model[i].MajorId, new { @id = "majorEdit" })
                                        <button id="@string.Format("btnEdit_{0}", Model[i].MajorId)" name="btnEdit">
                                            <span class="esg-icon__container">
                                                <svg class="esg-icon">
                                                    <use xlink:href="#icon-edit"></use>
                                                </svg>
                                            </span>
                                        </button>
                                    </td>
                                    <td class="esg-table-body__td">
                                        @if (Model[i].Institutions == "0")
                                        {
                                            @Html.HiddenFor(m => Model[i].MajorId, new { @id = "majorDelete" })
                                            <button id="@string.Format("btnDelete_{0}", Model[i].MajorId)" name="btnDelete">
                                                <span class="esg-icon__container">
                                                    <svg class="esg-icon">
                                                        <use xlink:href="#icon-trash"></use>
                                                    </svg>
                                                </span>
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="esg-card--panel__body">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align:end; margin-right:1rem">
                <button id="btnAddMajor" value="@WebAdminUI.Resources.ElectronicDegree.Major.lblAdd" type="button" class="esg-button esg-button esg-button--medium ">
                    <span class="esg-button__icon esg-icon__container" aria-hidden="true">
                        <svg class="esg-icon esg-icon--left">
                            <use xlink:href="#icon-add"></use>
                        </svg>
                    </span>
                </button>
            </div><br />
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <span class="esg-h4">
                    @WebAdminUI.Resources.ElectronicDegree.Major.lblNoMajors
                </span><br /><br />
            </div>
        </div>
    }
    <div id="divError" class="esg-card--panel__content" style="display:none">
        <div class="esg-container">
            <div class="esg-alert esg-alert--error" role="alert">
                <span class="esg-alert__icon-wrapper">
                    <span class="esg-alert__icon esg-icon__container" aria-hidden="True">
                        <svg class="esg-icon esg-icon--error-dark">
                            <use xlink:href="#icon-check"></use>
                        </svg>
                    </span>
                </span>
                <div class="esg-alert__message">@WebAdminUI.Resources.ElectronicDegree.Signer.lblError</div>
            </div>
        </div>
    </div>
    <div id="Overlaydiv" class="esg-modal-overlay" style="display:none; position:fixed; top:0; bottom:0; left:0; right:0;"></div>
    <div id="Processing" class="esg-modal-dialog" style="display:none;">
        <div class="esg-spinner-wrapper" style="position:absolute;">
            <div class="esg-spinner"></div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        var urlAddMajor = '@Url.Action("Add","Majors")';
        var urlEditMajor = '@Url.Action("Edit", "Majors")';
        var urlCreateMajor = '@Url.Action("Create","Majors")';
        var urlGetEditMajor = '@Url.Action("Set","Majors")';
        var urlDeleteMajor = '@Url.Action("Delete","Majors")';
        var urlUpdateMajor = '@Url.Action("Update","Majors")';
        var urlMajorIndex = '@Url.Action("Index","Majors")';
        var urlUnauthorized = '@Url.RouteUrl("ErrorUnauthorized")';
    </script>
    @Scripts.Render("~/bundles/ED/Majors")
}