@model PowerCampus.Entities.ElectronicDegree.CodeAuthorizationTypeMapping[]

@{
    ViewBag.Title = WebAdminUI.Resources.ElectronicDegree.Catalogs.LblCatalogs;
    var rvoeCatalog = ViewBag.RvoeCatalog as PowerCampus.Entities.ElectronicDegree.CodeRvoe[];
}

<br />
<div class="esg-page-header">
    <h1 class="esg-page-header__title">@WebAdminUI.Resources.ElectronicDegree.Catalogs.LblCatalogs</h1>
    <br />
</div>
<br />
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="esg-breadcrumb">
        <ol class="esg-breadcrumb__list">
            <li class="esg-breadcrumb__list-item"><a class="esg-breadcrumb__link" href="#">@WebAdminUI.Resources.ElectronicDegree.Catalogs.LblAcademicRecord</a></li>
            <li class="esg-breadcrumb__list-item"><a class="esg-breadcrumb__link" href="@Url.Action("Menu", "Menu")" )">@WebAdminUI.Resources.ElectronicDegree.Catalogs.LblElectronicDegree</a></li>
            <li class="esg-breadcrumb__list-item"><a class="esg-breadcrumb__link" href="@Url.Action("Index", "Setup")" )">@WebAdminUI.Resources.ElectronicDegree.Catalogs.LblSetup</a></li>
            <li class="esg-breadcrumb__list-item esg-is-active"> @WebAdminUI.Resources.ElectronicDegree.Catalogs.LblCatalogs</li>
        </ol>
    </div>
</div>
<div class="esg-tab">
    <ul class="esg-tab__menu" role="tablist" data-tabs="tabs">
        <li class="esg-tab__menu-item" role="presentation"><a class="esg-tab__link" href="@Url.Action("FederalEntity","Catalogs")">@WebAdminUI.Resources.ElectronicDegree.Catalogs.LblState</a></li>
        <li class="esg-tab__menu-item esg-is-active" role="presentation"><a class="esg-tab__link" href="#tab2-content">@WebAdminUI.Resources.ElectronicDegree.Catalogs.LblAuthorization</a></li>
    </ul>
</div>
<div id="formauthorizationTypes" class="esg-card--panel">
    <div class="esg-card--panel__body">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h5>@WebAdminUI.Resources.ElectronicDegree.AuthorizationType.LblMappingProgress @Math.Round(ViewBag.MappingProgress, 2) %</h5>
            <div class="esg-table__container">
                <table id="authorizationTypes_table" class="esg-table">
                    <thead class="esg-table-head">
                        <tr class="esg-table-head__row">
                            <th class="esg-table-head__th">@WebAdminUI.Resources.ElectronicDegree.AuthorizationType.LblAuthorizationType</th>
                            <th class="esg-table-head__th" style="width:35%">@WebAdminUI.Resources.ElectronicDegree.AuthorizationType.LblPowerCampusEquivalents</th>
                            <th class="esg-table-head__th" style="width:10%">@WebAdminUI.Resources.ElectronicDegree.AuthorizationType.LblApply</th>
                            <th class="esg-table-head__th" style="width:10%">@WebAdminUI.Resources.ElectronicDegree.AuthorizationType.LblEdit</th>
                        </tr>
                    </thead>
                    <tbody class="esg-table-body" id="authorizationTypes_table_rows_tbody">
                        @for (var i = 0; i < Model.Length; i++)
                        {
                            var authorizationType = Model[i];
                            <tr class="esg-table-body__row" id="authorizationEntity_@i">
                                <td class="esg-table-body__td">
                                    @authorizationType.LongDescription
                                </td>
                                <td class="esg-table-body__td">
                                    <div id="divMappedRvoes_@authorizationType.ShortDescription">
                                        @if (authorizationType.MappedRvoes.Length > 0)
                                        {
                                            @Html.Raw(string.Join(",", authorizationType.MappedRvoes.Select(m => m.Description)))
                                        }
                                    </div>
                                    <div class="esg-dropdown" id="@string.Format("divRvoe_{0}", authorizationType.ShortDescription)" style="display:none">
                                        <button class="esg-button esg-button--secondary esg-dropdown__toggle" id="@string.Format("ddlStateChk_{0}", authorizationType.ShortDescription)"
                                                data-placeholder="false" type="button" data-toggle="dropdown"
                                                aria-haspopup="true" aria-expanded="true" style="text-align:left; min-width:75%"
                                                onclick="openDropDownOptions('@authorizationType.ShortDescription'); return false;">
                                            @WebAdminUI.Resources.ElectronicDegree.AuthorizationType.LblSelect
                                            <span class="esg-dropdown__icon esg-dropdown__icon--right esg-icon__container" aria-hidden="True"
                                                  style="position:absolute; top:33%; left:85%">
                                                <svg class="esg-icon esg-icon--small esg-icon esg-icon--down">
                                                    <use xlink:href="#icon-arrow"></use>
                                                </svg>
                                            </span>
                                        </button>
                                        <ul id=@string.Format("ul_{0}", authorizationType.ShortDescription) class="esg-dropdown__menu"
                                            aria-labelledby="dropdownMenuCheckbox" style="min-width:75%; overflow-y:scroll; max-height:200px; position:relative">
                                            @foreach (var rvoe in rvoeCatalog)
                                            {
                                                <li class="esg-dropdown__menu-item">
                                                    <input id=@string.Format("ul_{0}_{1}", authorizationType.ShortDescription, rvoe.RvoeId)
                                                           class="rvoesFor@(authorizationType.ShortDescription)"
                                                           type="checkbox"
                                                           @*value=@string.Format("ul_{0}_{1}", federalEntity.ShortDescription, state.CodeValueKey)*@
                                                           value="@rvoe.RvoeId"
                                                           @(authorizationType.MappedRvoes.Any(ms => ms.RvoeId == rvoe.RvoeId) ? "checked" : "") />
                                                    <label for=@string.Format("ul_{0}_{1}", authorizationType.ShortDescription, rvoe.RvoeId)>@rvoe.Description</label>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </td>
                                <td class="esg-table-body__td">
                                    <button id="@string.Format("btnApply_{0}", authorizationType.ShortDescription)" name="btnApply" onclick="applyChanges('@authorizationType.ShortDescription'); return false;">
                                        <span class="esg-icon__container">
                                            <svg class="esg-icon">
                                                <use xlink:href="#icon-save"></use>
                                            </svg>
                                        </span>
                                    </button>
                                </td>
                                <td class="esg-table-body__td">
                                    <button id="@string.Format("btnEdit_{0}", authorizationType.ShortDescription)" name="btnEdit" onclick="enableDropdown('@authorizationType.ShortDescription'); return false;">
                                        <span class="esg-icon__container">
                                            <svg class="esg-icon">
                                                <use xlink:href="#icon-edit"></use>
                                            </svg>
                                        </span>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div id="divError" class="esg-card--panel__content" style="display:none">
        <div class="esg-container">
            <div class="esg-alert esg-alert--error" role="alert">
                <span class="esg-alert__icon-wrapper">
                    <span class="esg-alert__icon esg-icon__container" aria-hidden="True">
                        <svg class="esg-icon esg-icon--error-dark">
                            <use xlink:href="#icon-check"></use>
                        </svg>
                    </span>
                </span>
                <div class="esg-alert__message">@WebAdminUI.Resources.ElectronicDegree.AuthorizationType.LblError</div>
            </div>
        </div>
    </div>
    <div id="Overlaydiv" class="esg-modal-overlay" style="display:none; position:fixed; top:0; bottom:0; left:0; right:0;"></div>
    <div id="Processing" class="esg-modal-dialog" style="display:none;">
        <div class="esg-spinner-wrapper" style="position:absolute;">
            <div class="esg-spinner"></div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        var userName = '@ViewBag.UserName';
        var urlAuthorizationTypeMapping = '@Url.Action("AuthorizationType","Catalogs")';
        var urlSaveAuthorizationTypeMapping = '@Url.Action("SaveAuthorizationTypeMapping","Catalogs")';
    </script>
    @Scripts.Render("~/bundles/ED/AuthorizationType")
}