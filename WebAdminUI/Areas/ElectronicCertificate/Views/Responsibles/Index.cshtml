@model List<WebAdminUI.Areas.ElectronicCertificate.Models.Responsibles.ResponsiblesIndexList>

@{
    ViewBag.Title = WebAdminUI.Resources.ElectronicCertificate.Responsible.lblResponsibles;
}

<br />
<div class="esg-page-header">
    <h1 class="esg-page-header__title">@WebAdminUI.Resources.ElectronicCertificate.Responsible.lblResponsibles</h1>
    <br />
</div>
<br />
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="esg-breadcrumb">
        <ol class="esg-breadcrumb__list">
            <li class="esg-breadcrumb__list-item"><a class="esg-breadcrumb__link" href="@Url.RouteUrl("MenuAcademicRecords")">@WebAdminUI.Resources.ElectronicCertificate.Responsible.lblAcademicRecord</a></li>
            <li class="esg-breadcrumb__list-item"><a class="esg-breadcrumb__link" href="@Url.Action("Index", "Menu")" )">@WebAdminUI.Resources.ElectronicCertificate.Responsible.lblElectronicCertificate</a></li>
            <li class="esg-breadcrumb__list-item"><a class="esg-breadcrumb__link" href="@Url.Action("Index", "Setup")" )">@WebAdminUI.Resources.ElectronicCertificate.Responsible.lblSetup</a></li>
            <li class="esg-breadcrumb__list-item esg-is-active"> @WebAdminUI.Resources.ElectronicCertificate.Responsible.lblResponsibles</li>
        </ol>
    </div>
</div>
<div id="formResponsibles" class="esg-card--panel">

    @if (Model.Count > 0)
    {
        <br />
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align:end; margin-right:1rem">
            <button id="btnAddResponsible" type="button" class="esg-button esg-button esg-button--medium ">
                <span class="esg-button__icon esg-icon__container" aria-hidden="true">
                    <svg class="esg-icon esg-icon--left">
                        <use xlink:href="#icon-add"></use>
                    </svg>
                </span>
            </button>
        </div><br />
        <div class="esg-card--panel__body">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="esg-table__container">
                    <table id="responsibles_table" class="esg-table">
                        <thead class="esg-table-head">
                            <tr class="esg-table-head__row">
                                <th class="esg-table-head__th" style="width:35%">@Html.DisplayNameFor(m => m[0].Responsibles)</th>
                                <th class="esg-table-head__th" style="width:15%">@Html.DisplayNameFor(m => m[0].Position)</th>
                                <th class="esg-table-head__th">@Html.DisplayNameFor(m => m[0].Status)</th>
                                <th class="esg-table-head__th">@Html.DisplayNameFor(m => m[0].Edit)</th>
                            </tr>
                        </thead>
                        <tbody class="esg-table-body" id="responsible_table_rows_tbody">
                            @for (var i = 0; i < Model.Count; i++)
                            {
                                var Signers = Model[i];
                                <tr class="esg-table-body__row" id="@i">
                                    <td class="esg-table-body__td">
                                        @Html.Label("lblResponsible", Model[i].Responsibles, new { @id = Model[i].ResponsibleId })
                                    </td>
                                    <td class="esg-table-body__td">
                                        @Html.Label("lblPosition", Model[i].Position)
                                    </td>
                                    <td class="esg-table-body__td">
                                        @if (Model[i].IsActive)
                                        {
                                            <span class="esg-label esg-label--pending">@WebAdminUI.Resources.ElectronicCertificate.Responsible.lblActive</span>
                                        }
                                        else
                                        {
                                            <span class="esg-label esg-label--error">@WebAdminUI.Resources.ElectronicCertificate.Responsible.lblInactive </span>
                                        }
                                    </td>
                                    <td class="esg-table-body__td">
                                        @Html.HiddenFor(m => Model[i].ResponsibleId, new { @id = "responsibleEdit" })
                                        <button id="@string.Format("btnEdit_{0}", Model[i].ResponsibleId)" class="btnEdit">
                                            <span class="esg-icon__container">
                                                <svg class="esg-icon">
                                                    <use xlink:href="#icon-edit"></use>
                                                </svg>
                                            </span>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="esg-card--panel__body">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align:end; margin-right:1rem">
                <button id="btnAddResponsible" value="@WebAdminUI.Resources.ElectronicCertificate.Responsible.lblAdd" type="button" class="esg-button esg-button esg-button--medium ">
                    <span class="esg-button__icon esg-icon__container" aria-hidden="true">
                        <svg class="esg-icon esg-icon--left">
                            <use xlink:href="#icon-add"></use>
                        </svg>
                    </span>
                </button>
            </div><br />
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <span class="esg-h4">
                    @WebAdminUI.Resources.ElectronicCertificate.Responsible.lblNoResponsibles
                </span><br /><br />
            </div>
        </div>
    }
</div>

@section Scripts{
    <script type="text/javascript">
        var urlAddResponsible = '@Url.Action("Add","Responsibles")';
        var urlEditResponsible = '@Url.Action("Edit", "Responsibles")';
        var urlCreateResponsible = '@Url.Action("Create","Responsibles")';
        var urlGetEditResponsible = '@Url.Action("Set","Responsibles")';
    </script>
    @Scripts.Render("~/bundles/EC/Responsibles")
}