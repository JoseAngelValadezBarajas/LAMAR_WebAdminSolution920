@model IEnumerable<WebAdminUI.Models.Receivers.ReceiverViewModel>

@{
    ViewBag.Title = WebAdminUI.Views.Receivers.App_LocalResources.CreateResource.List;
}

<div class="esg-page-header">
    <a class="esg-page-header__button" role="button" title=@WebAdminUI.Views.Receivers.App_LocalResources.CreateResource.ButtonBack
       href="@Url.Action("Menu", "FiscalRecords")">
        <span class="esg-page-header__icon esg-icon__container">
            <svg class="esg-icon esg-icon--left">
                <use xlink:href="#icon-arrow"></use>
            </svg>
        </span>
    </a>
    <h1 class="esg-page-header__title" style="height:30px;">@WebAdminUI.Views.Receivers.App_LocalResources.CreateResource.ReceiverFiscalInformation</h1>
</div>

<div class="esg-card--panel">
    <div class="esg-card--panel__heading">
        <div class="row">
            <div class="col-lg-5 col-md-6 col-sm-8 col-xs-12">
                <div class="esg-form__group esg-has-feedback">
                    <label for="ReceiverFilter" class="esg-form__label">@WebAdminUI.Views.Receivers.App_LocalResources.CreateResource.lblReceptorDesc</label>
                    <input type="text" id="ReceiverFilter" class="esg-form__input" />
                </div>
            </div>
            <div class="col-lg-1 col-md-3 col-sm-4 col-xs-12 margin-top-button" style="min-width: 150px">
                <input type="button" id="btnSearch" value=@WebAdminUI.Views.Receivers.App_LocalResources.CreateResource.btnSearch class="esg-button esg-button--primary esg-button--fluid" />
            </div>
        </div>
        <span class="esg-card-widget__header-action" style="margin-bottom: 20px">
            <button id="receiver_addbutton" class="esg-button esg-button--secondary esg-button--medium " onclick="window.location = 'Create';">
                <span class="esg-button__icon esg-icon__container  esg-button-icon--align-left" aria-hidden="true">
                    <svg class="esg-icon esg-icon--left">
                        <use xlink:href="#icon-add"></use>
                    </svg>
                </span>
                <span class="button-label">
                    @WebAdminUI.Views.Receivers.App_LocalResources.CreateResource.CreateNew
                </span>
            </button>
        </span>
    </div>
    <div class="esg-card--panel__body">
        <div id="divTablePartialView">
            @Html.Partial("_ReceiversTable", Model)
        </div>
    </div>
</div>

<div id="deleteModal" class="esg-modal-dialog" style="display:none;">
    <div class="esg-modal-dialog__header">
        <button class="btnCancelDelete esg-modal-dialog__close esg-icon__container" type="button" data-dismiss="modal" aria-hidden="true">
            <svg class="esg-icon esg-icon--large esg-icon--neutral">
                <use xlink:href="#icon-close"></use>
            </svg>
        </button>
        <h3 class="esg-modal-dialog__title">@WebAdminUI.Views.Receivers.App_LocalResources.CreateResource.lblDeleteModalTitle</h3>
    </div>
    <div class="esg-modal-dialog__body">
        <dl class="dl-horizontal">
            <dt style="min-width: 220px">@WebAdminUI.Views.Receivers.App_LocalResources.CreateResource.lblTaxpayerId</dt>
            <dd style="margin-left: 250px" id="taxpayerField"></dd>
            <dt style="min-width: 220px">@WebAdminUI.Views.Receivers.App_LocalResources.CreateResource.lblCorpName</dt>
            <dd style="margin-left: 250px" id="nameField"></dd>
        </dl>
    </div>
    <div class="esg-modal-dialog__action-section esg-button-group esg-button-group--fluid" role="group" aria-label="button group">
        <div class="esg-button-group__item" role="group">
            <button class="btnCancelDelete esg-button esg-button--secondary esg-modal-dialog__button" type="button">@WebAdminUI.Views.Receivers.App_LocalResources.CreateResource.lblCancel</button>
        </div>
        <div class="esg-button-group__item" role="group">
            <button id="btnDelete"
                    class="esg-button esg-button--primary esg-modal-dialog__button"
                    data-taxpayer-id="0"
                    type="button">
                @WebAdminUI.Views.Receivers.App_LocalResources.CreateResource.Delete
            </button>
        </div>
    </div>
</div>
<div id="deleteModalOverlay" class="esg-modal-overlay" style="display:none; position:fixed; top:0px; bottom:0px; left:0px; right:0px;"></div>

<div id="Overlaydiv" class="esg-modal-overlay no-display" style="position:fixed; top:0; bottom:0; left:0; right:0; z-index:1500;"></div>
<div id="Processing" class="esg-modal-dialog no-display">
    <div class="esg-spinner-wrapper" style="position:absolute;">
        <div class="esg-spinner"></div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        var urlDeleteReceiver = '@Url.Action("Delete", "Receivers")';
        var urlSearchReceivers = '@Url.Action("ReceiversSearch", "Receivers")';
    </script>

    @Scripts.Render("~/bundles/FR/ReceiversList")
}