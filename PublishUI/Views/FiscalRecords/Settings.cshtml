@{
    ViewBag.Title = WebAdminUI.Views.FiscalRecords.App_LocalResources.SettingsResource.SettingsTitle;
    var permissions = ViewBag.Account as PowerCampus.Entities.Account;
}

<div class="esg-page-header">
    <h1 class="esg-page-header__title" style="height:30px">
        @WebAdminUI.Views.FiscalRecords.App_LocalResources.SettingsResource.SettingsTitle
    </h1>
</div>
<div class="esg-card--panel">
    <div class="esg-card--panel__body">
        <div class="row col-md-12">
            <div class="row col-md-6" style="margin-left:10px;">
                <div class="form-group row">
                    <div class="esg-card--panel">
                        <a href="@Url.Action("List", "TaxProfiles")">
                            <div class="esg-card" style="float:left;width: 95%">
                                <div class="col-sm-1">
                                    <svg class="esg-icon esg-icon--large esg-icon--light"><use xlink:href="#icon-info"></use></svg>
                                </div>
                                <div class="col-md-6">
                                    <h3><span>@WebAdminUI.Views.FiscalRecords.App_LocalResources.SettingsResource.TaxProfileMapping</span></h3>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <div class="row col-md-6" style="margin-left:0px;">
                <div class="form-group row">
                    <div style="clear:both"></div>
                    <div class="esg-card--panel">
                        <a href="@Url.Action("Index", "ChargeCreditMappings")">
                            <div class="esg-card" style="float:left;width: 95%">
                                <div class="col-sm-1">
                                    <svg class="esg-icon esg-icon--large esg-icon--light"><use xlink:href="#icon-info"></use></svg>
                                </div>
                                <div class="col-md-10">
                                    <h3><span>@WebAdminUI.Views.FiscalRecords.App_LocalResources.SettingsResource.ChargeCreditMapping</span></h3>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <div style="clear:both"></div>
        </div>

        <div class="row col-md-12">
            @if (permissions.permissions.Where(m => m.Description == "FiscalRecordSetup").Select(m => m.Value).FirstOrDefault())
            {
                <div class="row col-md-6" style="margin-left:10px;">
                    <div class="form-group row">
                        <div class="esg-card--panel">
                            <a href="@Url.Action("IssuerSetup", "Issuers")">
                                <div class="esg-card" style="float:left;width: 95%">
                                    <div class="col-sm-1">
                                        <svg class="esg-icon esg-icon--large esg-icon--light"><use xlink:href="#icon-info"></use></svg>
                                    </div>
                                    <div class="col-md-6">
                                        <h3><span>@WebAdminUI.Views.FiscalRecords.App_LocalResources.SettingsResource.IssuerDefaultSetUp</span></h3>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            }
            <div class="row col-md-6" style="margin-left:0px;">
                <div class="form-group row">
                    <div style="clear:both"></div>
                    <div class="esg-card--panel">
                        <a href="@Url.Action("List", "ReceiptPaymentMappings")">
                            <div class="esg-card" style="float:left;width: 95%">
                                <div class="col-sm-1">
                                    <svg class="esg-icon esg-icon--large esg-icon--light"><use xlink:href="#icon-info"></use></svg>
                                </div>
                                <div class="col-md-10">
                                    <h3><span>@WebAdminUI.Views.FiscalRecords.App_LocalResources.SettingsResource.ReceiptPaymentMapping</span></h3>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#fiscalRecordsSettingsItem").addClass('esg-is-active');
        });
    </script>
}