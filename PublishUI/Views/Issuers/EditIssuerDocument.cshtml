            @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control", @ReadOnly = "ReadOnly" } })
            @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger validation-label" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" disabled="disabled" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Issuer", "Edit", new { id = Request.QueryString["taxpayerId"] })
</div>