{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Error",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.AspNetCore": "Error",
        "System": "Error"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithProcessId",
      "WithHttpRequestClientHostIP",
      "WithHttpRequestClientHostName",
      "WithHttpRequestId",
      "WithHttpRequestNumber",
      "WithHttpRequestRawUrl",
      "WithHttpRequestTraceId",
      "WithHttpRequestType",
      "WithHttpRequestUrl",
      "WithHttpRequestUrlReferrer",
      "WithHttpRequestUserAgent",
      "WithHttpSessionId",
      "WithUserName"
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "%BASEDIR%\\App_Data\\allevents.log",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ],
    "Properties": {
      "Application": "WebAdmin"
    }
  }
}