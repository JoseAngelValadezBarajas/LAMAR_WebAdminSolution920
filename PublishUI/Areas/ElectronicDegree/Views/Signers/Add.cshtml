@model WebAdminUI.Areas.ElectronicDegree.Models.Signers.AddSignersViewModel

@{
    ViewBag.Title = WebAdminUI.Resources.ElectronicDegree.Signer.lblSigners;
    var userName = ViewBag.Account as PowerCampus.Entities.Account;
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formCreate" }))
{
    <br />
    <div class="esg-page-header">
        <h1 class="esg-page-header__title">@WebAdminUI.Resources.ElectronicDegree.Signer.lblSigners</h1>
    </div>
    <div id="formAddSigners" class="esg-card--panel">
        <div class="esg-card--panel__body">
            <div class="esg-card--panel__content">
                <div class="esg-container">
                    <div class="esg-col-lg-12 esg-col-md-12 esg-col-sm-12 esg-col-xs-12">
                        <h4 class="esg-page-header__subtitle">@WebAdminUI.Resources.ElectronicDegree.Signer.lblAddSigner</h4> <br />
                        <hr />
                    </div>
                </div>
                <div class="esg-container">
                    <div class="esg-col-lg-12 esg-col-md-12 esg-col-sm-12 esg-col-xs-12">
                        <div class="esg-col-lg-6 esg-col-md-6 esg-col-sm-6 esg-col-xs-12">
                            <div class="esg-form__group">
                                <label class="esg-is-hidden">
                                    <input class="esg-form__switch" id="swtActive" type="checkbox" checked="checked" aria-labelledBy="toggle2label" />
                                    <span class="esg-form__switch-toggle" aria-label="Checked switch label"></span>
                                    <span class="esg-form__label" id="toggle2label">@WebAdminUI.Resources.ElectronicDegree.Signer.lblActive</span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="esg-col-lg-12 esg-col-md-12 esg-col-sm-12 esg-col-xs-12">
                        <div class="esg-col-lg-6 esg-col-md-6 esg-col-sm-6 esg-col-xs-12">
                            <div id="divCurp" class="esg-form__group esg-has-feedback">
                                @Html.LabelFor(m => m.Curp, new { @class = "esg-form__label esg-is-required" })<br />
                                <div class="esg-form__input-group">
                                    @Html.TextBoxFor(m => m.Curp, new { @class = "esg-form__input", @id = "Curp", @required = "required", maxLength = 40 })
                                    @Html.ValidationMessageFor(m => m.Curp, "", new { @class = "text-danger", @style = "color:red" })
                                    @Html.LabelFor(m => m.CurpExists, new { @class = "esg-form__label", @id = "CurpExists", @style = "color:red; display:none" })
                                    <div id="divCurpErr" class="esg-form__feedback-icon esg-icon__container" style="display:none">
                                        <svg class="esg-icon esg-icon--error">
                                            <use xlink:href="#icon-error"></use>
                                        </svg>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="esg-col-lg-6 esg-col-md-6 esg-col-sm-6 esg-col-xs-12">
                            <div id="divName" class="esg-form__group esg-has-feedback">
                                @Html.LabelFor(m => m.Name, new { @class = "esg-form__label esg-is-required" })<br />
                                <div class="esg-form__input-group">
                                    @Html.TextBoxFor(m => m.Name, new { @class = "esg-form__input", @id = "Name", @required = "required" })
                                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger", @style = "color:red" })
                                    <div id="divNameErr" class="esg-form__feedback-icon esg-icon__container" style="display:none">
                                        <svg class="esg-icon esg-icon--error">
                                            <use xlink:href="#icon-error"></use>
                                        </svg>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="esg-col-lg-12 esg-col-md-12 esg-col-sm-12 esg-col-xs-12">
                        <div class="esg-col-lg-6 esg-col-md-6 esg-col-sm-6 esg-col-xs-12">
                            <div id="divFirstSurname" class="esg-form__group esg-has-feedback">
                                @Html.LabelFor(m => m.FirstSurname, new { @class = "esg-form__label esg-is-required" })<br />
                                <div class="esg-form__input-group">
                                    @Html.TextBoxFor(m => m.FirstSurname, new { @class = "esg-form__input", @id = "FirstSurname", @required = "required" })
                                    @Html.ValidationMessageFor(m => m.FirstSurname, "", new { @class = "text-danger", @style = "color:red" })
                                    <div id="divFirstSurnameErr" class="esg-form__feedback-icon esg-icon__container" style="display:none">
                                        <svg class="esg-icon esg-icon--error">
                                            <use xlink:href="#icon-error"></use>
                                        </svg>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="esg-col-lg-6 esg-col-md-6 esg-col-sm-6 esg-col-xs-12">
                            <div id="divSecondSurname" class="esg-form__group">
                                @Html.LabelFor(m => m.SecondSurname, new { @class = "esg-form__label" })<br />
                                <div class="esg-form__input-group">
                                    @Html.TextBoxFor(m => m.SecondSurname, new { @class = "esg-form__input", @id = "SecondSurname" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="esg-col-lg-12 esg-col-md-12 esg-col-sm-12 esg-col-xs-12">
                        <div class="esg-col-lg-6 esg-col-md-6 esg-col-sm-6 esg-col-xs-12">
                            <div id="divLaborPosition" class="esg-form__group esg-has-feedback">
                                @Html.LabelFor(m => m.LaborPosition, new { @class = "esg-form__label esg-is-required" })<br />
                                <div class="esg-form__input-group">
                                    @Html.DropDownListFor(m => m.LaborPosition, new SelectList(Model.LaborPosition.LaborPosition, "CodeValue", "Description"), "", new { @class = "esg-form__input", @id = "LaborPosition", @required = "required" })
                                    @Html.ValidationMessageFor(m => m.LaborPosition, "", new { @class = "text-danger", @style = "color:red" })
                                    <div id="divLaborPositionErr" class="esg-form__feedback-icon esg-icon__container" style="display:none">
                                        <svg class="esg-icon esg-icon--error">
                                            <use xlink:href="#icon-error"></use>
                                        </svg>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="esg-col-lg-6 esg-col-md-6 esg-col-sm-6 esg-col-xs-12">
                            <div id="divTitileAbb" class="esg-form__group esg-has-feedback">
                                @Html.LabelFor(m => m.ProfessionalTitleAbbreviation, new { @class = "esg-form__label esg-is-required" })<br />
                                <div class="esg-form__input-group">
                                    @Html.DropDownListFor(m => m.ProfessionalTitleAbbreviation, new SelectList(Model.ProfessionalTitleAbbreviation.TitleAbbreviation, "CodeValue", "Description"), "", new { @class = "esg-form__input", @id = "ProfessionalTitleAbbreviation", @required = "required" })
                                    @Html.ValidationMessageFor(m => m.ProfessionalTitleAbbreviation, "", new { @class = "text-danger", @style = "color:red" })
                                    <div id="divTitileAbbErr" class="esg-form__feedback-icon esg-icon__container" style="display:none">
                                        <svg class="esg-icon esg-icon--error">
                                            <use xlink:href="#icon-error"></use>
                                        </svg>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="esg-col-lg-12 esg-col-md-12 esg-col-sm-12 esg-col-xs-12">
                        <div class="esg-col-lg-6 esg-col-md-6 esg-col-sm-6 esg-col-xs-12">
                            <fieldset>
                                <legend>
                                    @WebAdminUI.Resources.ElectronicDegree.Signer.lblFiel
                                </legend>
                            </fieldset>
                        </div>
                    </div>
                    <div class="esg-col-lg-12 esg-col-md-12 esg-col-sm-12 esg-col-xs-12">
                        <div class="esg-col-lg-6 esg-col-md-6 esg-col-sm-6 esg-col-xs-12">
                            <div id="divThumbprint" class="esg-form__group esg-has-feedback">
                                @Html.LabelFor(m => m.Thumbprint, new { @class = "esg-form__label esg-is-required" })<br />
                                <div class="esg-form__input-group">
                                    @Html.TextBoxFor(m => m.Thumbprint, new { @class = "esg-form__input", @id = "Thumbprint", @required = "required", maxLength = 100 })
                                    @Html.ValidationMessageFor(m => m.Thumbprint, "", new { @class = "text-danger", @style = "color:red" })
                                    @Html.LabelFor(m => m.ThumbprintValid, new { @class = "esg-form__label", @id = "ThumprintValid", @style = "color:red; display:none" })
                                    <div id="divThumbprintErr" class="esg-form__feedback-icon esg-icon__container" style="display:none">
                                        <svg class="esg-icon esg-icon--error">
                                            <use xlink:href="#icon-error"></use>
                                        </svg>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="esg-card--panel__content" style="text-align:end">
                <div class="eds-button-group" role="group" style="margin-top:1rem" aria-label="button group">
                    <button class="eds-button eds-button--secondary" id="btnCancel" type="button">@WebAdminUI.Resources.ElectronicDegree.Signer.lblCancel</button>
                    <button class="eds-button eds-button--primary" id="btnAdd" type="button">@WebAdminUI.Resources.ElectronicDegree.Signer.lblSave</button>
                </div>
            </div>
            <div id="divError" class="esg-card--panel__content" style="display:none">
                <div class="esg-container">
                    <div class="esg-alert esg-alert--error" role="alert">
                        <span class="esg-alert__icon-wrapper">
                            <span class="esg-alert__icon esg-icon__container" aria-hidden="True">
                                <svg class="esg-icon esg-icon--error-dark">
                                    <use xlink:href="#icon-check"></use>
                                </svg>
                            </span>
                        </span>
                        <div class="esg-alert__message">@WebAdminUI.Resources.ElectronicDegree.Signer.lblError</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="Overlaydiv" class="esg-modal-overlay" style="display:none; position:fixed; top:0; bottom:0; left:0; right:0;"></div>
    <div id="Processing" class="esg-modal-dialog" style="display:none;">
        <div class="esg-spinner-wrapper" style="position:absolute;">
            <div class="esg-spinner"></div>
        </div>
    </div>
}

@section Scripts{
    <script type="text/javascript">
        var userName = '@userName.UserName';
        var urlCreateSigner = '@Url.Action("Create","Signers")';
        var urlGetEditSigner = '@Url.Action("Set","Signers")';
        var urlSignerIndex = '@Url.Action("Index","Signers")';
        var urlValidateCurp = '@Url.Action("ValidateCurp", "Signers")';
        var urlValidateThumprint = '@Url.Action("ValidateThumprint","Signers")';
        var urlUnauthorized = '@Url.RouteUrl("ErrorUnauthorized")';
    </script>
    @Scripts.Render("~/bundles/ED/Signers")
}