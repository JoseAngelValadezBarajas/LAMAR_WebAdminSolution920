@model WebAdminUI.Areas.ElectronicCertificate.Models.ProgramViewModel
@{
    ViewBag.Title = WebAdminUI.Resources.ElectronicCertificate.AcademicPlan.lblAcademicPlan;
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formCreate" }))
{
    <br />
    <div class="esg-page-header">
        <h1 class="esg-page-header__title">@WebAdminUI.Resources.ElectronicCertificate.AcademicPlan.lblAcademicPlan</h1>
        <br />
    </div>
    <br />
    <div id="form" class="esg-card--panel">
        @if (Model != null)
        {
            int indexCourse = 0;
            <br />
            <div class="esg-card--panel__body">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div>
                        <div class="esg-col-lg-12 esg-col-md-12 esg-col-sm-12 esg-col-xs-12">
                            <div class="esg-col-xs-12 esg-col-sm-12">
                                <h1 class="esg-page-header__title">@Model.Name</h1>
                                <br />
                            </div>
                        </div>
                        <div class="esg-col-lg-12 esg-col-md-12 esg-col-sm-12 esg-col-xs-12">
                            <div class="esg-col-xs-12 esg-col-sm-2">
                                <label>@WebAdminUI.Resources.ElectronicCertificate.AcademicPlan.lblCampus</label> : <label id="MinimumPassingGrade">@Model.CampusName</label>
                            </div>
                            <div class="esg-col-xs-12 esg-col-sm-2">
                                <label>@WebAdminUI.Resources.ElectronicCertificate.AcademicPlan.lblMatricYear</label> : <label id="MinimumPassingGrade">@Model.MatricYear</label>
                            </div>
                            <div class="esg-col-xs-12 esg-col-sm-2">
                                <label>@WebAdminUI.Resources.ElectronicCertificate.AcademicPlan.lblMatricTerm</label> : <label id="MinimumPassingGrade">@Model.MatricTerm</label>
                            </div>
                            <div class="esg-col-xs-12 esg-col-sm-2">
                                <label>@WebAdminUI.Resources.ElectronicCertificate.AcademicPlan.lblMajorId</label> : <label id="MinimumPassingGrade">@Model.MajorId</label>
                            </div>
                        </div>
                        <div class="esg-col-lg-12 esg-col-md-12 esg-col-sm-12 esg-col-xs-12">
                            <div class="esg-col-xs-12 esg-col-sm-2">
                                <label>@WebAdminUI.Resources.ElectronicCertificate.AcademicPlan.lblRvoe</label> : <label id="MinimumPassingGrade">@Model.RVOE.RvoeAgreement</label>
                            </div>
                            <div class="esg-col-xs-12 esg-col-sm-2">
                                <label>@WebAdminUI.Resources.ElectronicCertificate.AcademicPlan.lblIssuingDate</label> : <label id="MinimumPassingGrade">@Model.RVOE.IssuingDate</label>
                            </div>
                            <div class="esg-col-xs-12 esg-col-sm-2">
                                <label>@WebAdminUI.Resources.ElectronicCertificate.AcademicPlan.lblMinimumGrade</label> : <label id="MinimumPassingGrade">@Model.RVOE.MinimumGrade</label>
                            </div>
                            <div class="esg-col-xs-12 esg-col-sm-2">
                                <label>@WebAdminUI.Resources.ElectronicCertificate.AcademicPlan.lblMaximumGrade</label> : <label id="MinimumPassingGrade">@Model.RVOE.MaximumGrade</label>
                            </div>
                            <div class="esg-col-xs-12 esg-col-sm-4">
                                <label>@WebAdminUI.Resources.ElectronicCertificate.AcademicPlan.lblMinPassingGrade</label> : <label id="MinimumPassingGrade">@Model.RVOE.MinimumPassingGrade</label>
                            </div>
                            <br />
                            <br />
                        </div>
                        <hr />
                        <div class="esg-col-lg-12 esg-col-md-12 esg-col-sm-12 esg-col-xs-12">
                            <div class="esg-col-xs-12 esg-col-sm-2">
                                <h3>@WebAdminUI.Resources.ElectronicCertificate.PdcCourse.lblCourses</h3>
                            </div>
                        </div>
                        <div class="esg-col-lg-12 esg-col-md-12 esg-col-sm-12 esg-col-xs-12">
                            <div class="esg-col-xs-12 esg-col-sm-10">
                                <p>
                                    @if (Model.CourseMappingPercent == 100)
                                    {
                                        <label>@string.Format(WebAdminUI.Resources.ElectronicCertificate.PdcCourse.lblMappingProgress, @Model.CourseMappingPercent)</label>
                                        <svg class="esg-icon--success esg-icon--small">
                                            <use xlink: href="#icon-check"></use>
                                        </svg>
                                    }
                                    else
                                    {
                                        <label style="color:red">@string.Format(WebAdminUI.Resources.ElectronicCertificate.PdcCourse.lblMappingProgress, @Model.CourseMappingPercent)</label>
                                        <svg class="esg-icon--error esg-icon--small">
                                            <use xlink: href="#icon-swap"></use>
                                        </svg>
                                    }
                                </p>
                            </div>
                            @*<div class="esg-col-xs-12 esg-col-sm-2" style="text-align:end">
                                    <div class="eds-button-group" role="group" style="text-align:end" aria-label="button group">
                                        <svg class="esg-icon--info esg-icon--small" style="vertical-align: middle;">
                                            <use xlink:href="#icon-info"></use>
                                        </svg>
                                        &nbsp;
                                        <button class="eds-button eds-button--secondary eds-button--small" id="btnUploadLayout" type="button">
                                            @WebAdminUI.Resources.ElectronicCertificate.PdcCourse.lblUploadLayout
                                        </button>
                                    </div>
                                </div>*@
                        </div>
                    </div>
                    <div class="esg-table__container">
                        <table id="records_table" class="esg-table" style="width:98%">
                            <thead class="esg-table-head">
                                <tr class="esg-table-head__row">
                                    <th class="esg-table-head__th" style="width:15%">@Html.DisplayNameFor(m => m.Courses[0].EventId)</th>
                                    <th class="esg-table-head__th" style="width:15%">@Html.DisplayNameFor(m => m.Courses[0].DisciplineDesc) / @Html.DisplayNameFor(m => m.Courses[0].ClassificationDesc)</th>
                                    <th class="esg-table-head__th" style="width:30%">@Html.DisplayNameFor(m => m.Courses[0].EventName)</th>
                                    <th class="esg-table-head__th" style="width:10%">@Html.DisplayNameFor(m => m.Courses[0].Credits)</th>
                                    <th class="esg-table-head__th" style="width:10%">@Html.DisplayNameFor(m => m.Courses[0].SepId)</th>
                                    <th class="esg-table-head__th" style="width:15%">@Html.DisplayNameFor(m => m.Courses[0].SubjectTypeId)</th>
                                </tr>
                            </thead>
                            <tbody class="esg-table-body" id="table_rows_tbody">
                                @if (Model.Courses != null)
                                {
                                    foreach (var item in Model.Courses)
                                    {
                                        <tr class="esg-table-body__row" id="@indexCourse">
                                            <td class="esg-table-body__td">

                                                @Html.Label(item.EventId + " / " + item.EventSubTypeDesc ?? string.Empty, new
                                                {
                                                    @id = string.Format("EventId_{0}", indexCourse),
                                                    data_id = item.EventId
                                                })
                                                @Html.HiddenFor(modelItem => item.EventSubType,
                                                new
                                                {
                                                    id = string.Format("EventSubType_{0}", indexCourse),
                                                    Value = item.EventSubType
                                                })
                                                @Html.HiddenFor(modelItem => item.EventSubTypeDesc,
                                                new
                                                {
                                                    id = string.Format("EventSubTypeDesc_{0}", indexCourse),
                                                    Value = item.EventSubTypeDesc
                                                })
                                                @if (item.EventSubTypeDesc == null)
                                                {
                                                    <br />
                                                    <label style="color:red" id="@string.Format("MissingSubType_{0}", indexCourse)">@WebAdminUI.Resources.ElectronicCertificate.PdcCourse.lblMissing</label>
                                                }
                                            </td>
                                            <td class="esg-table-body__td">
                                                @Html.Label(item.DisciplineDesc + " / " + item.ClassificationDesc, new
                                                {
                                                    @id = string.Format("Discipline_{0}", indexCourse),
                                                    data_id = item.Discipline
                                                })
                                                @Html.HiddenFor(modelItem => item.Classification,
                                                new
                                                {
                                                    id = string.Format("Classification_{0}", indexCourse),
                                                    Value = item.Classification
                                                })
                                            </td>
                                            <td class="esg-table-body__td">
                                                @Html.Label(item.EventName, new
                                                {
                                                    @id = string.Format("EventName_{0}", indexCourse),
                                                    data_id = item.EventName
                                                })
                                            </td>
                                            <td class="esg-table-body__td">
                                                <label id="@string.Format("Credits_{0}", indexCourse)" data-id="@item.Credits">@item.CreditsString</label>
                                            </td>
                                            <td class="esg-table-body__td">
                                                <div class="esg-form__group esg-has-feedback" id="@string.Format("divSepId_{0}", indexCourse)">
                                                    <div class="esg-form__input-group">
                                                        @if (item.EventSubTypeDesc == null)
                                                        {
                                                            @Html.TextBoxFor(modelItem => item.SepId, "", new
                                                            {
                                                                @class = "esg-form__input",
                                                                @id = string.Format("SepId_{0}", indexCourse),
                                                                data_id = item.SepId ?? "",
                                                                maxlength = 10,
                                                                @readonly = "readonly"
                                                            })
                                                        }
                                                        else
                                                        {
                                                            @Html.TextBoxFor(modelItem => item.SepId, "", new
                                                           {
                                                               @class = "esg-form__input",
                                                               @id = string.Format("SepId_{0}", indexCourse),
                                                               data_id = item.SepId ?? "",
                                                               maxlength = 10
                                                           })
                                                        }
                                                        <div id="@string.Format("divSepId_{0}Err", indexCourse)" class="esg-form__feedback-icon esg-icon__container" style="display:none">
                                                            <svg class="esg-icon esg-icon--error">
                                                                <use xlink:href="#icon-error"></use>
                                                            </svg>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="esg-table-body__td">
                                                @if (item.EventSubTypeDesc == null)
                                                {
                                                    @Html.DropDownListFor(modelItem => item.SubjectTypeId,
                                                    new SelectList(Model.Types, "Id", "Description", item.SubjectTypeId),
                                                    new
                                                    {
                                                        @class = "esg-form__input",
                                                        @id = string.Format("SubjectTypeId_{0}", indexCourse),
                                                        data_id = item.SubjectTypeId,
                                                        @disabled = "disabled"
                                                    })
                                                }
                                                else
                                                {
                                                    @Html.DropDownListFor(modelItem => item.SubjectTypeId,
                                                    new SelectList(Model.Types, "Id", "Description", item.SubjectTypeId),
                                                    new
                                                    {
                                                        @class = "esg-form__input",
                                                        @id = string.Format("SubjectTypeId_{0}", indexCourse),
                                                        data_id = item.SubjectTypeId
                                                    })
                                                }
                                                @Html.HiddenFor(modelItem => item.AcademicPlanCourseCatalogId,
                                                           new
                                                           {
                                                               id = string.Format("AcademicPlanId_{0}", indexCourse),
                                                               Value = item.AcademicPlanCourseCatalogId ?? 0
                                                           })
                                            </td>
                                        </tr>
                                        indexCourse++;
                                    }
                                }
                                <tr>
                                    <td>
                                        @Html.HiddenFor(m => @indexCourse,
                                            new
                                            {
                                                id = "hdnindexCourse",
                                                Value = @indexCourse
                                            })
                                        @Html.HiddenFor(m => Model.RVOE.Id,
                                            new
                                            {
                                                id = "RvoeId",
                                                Value = Model.RVOE.Id
                                            })
                                        @Html.HiddenFor(m => Model.RVOE.Id,
                                            new
                                            {
                                                id = "RvoeId",
                                                Value = Model.RVOE.Id
                                            })
                                        @Html.HiddenFor(m => Model.CampusCodeId,
                                            new
                                            {
                                                id = "CampusCodeId",
                                                Value = Model.CampusCodeId
                                            })
                                        @Html.HiddenFor(m => Model.MatricYear,
                                            new
                                            {
                                                id = "MatricYear",
                                                Value = Model.MatricYear
                                            })
                                        @Html.HiddenFor(m => Model.MatricTerm,
                                            new
                                            {
                                                id = "MatricTerm",
                                                Value = Model.MatricTerm
                                            })
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="esg-card--panel__content" style="text-align:end">

                <div class="eds-button-group" role="group" style="margin-top:1rem" aria-label="button group">
                    <button class="eds-button eds-button--secondary" id="btnCancel" type="button">@WebAdminUI.Resources.ElectronicCertificate.Institution.lblCancel</button>
                    <button class="eds-button eds-button--primary" id="btnSave" type="button">@WebAdminUI.Resources.ElectronicCertificate.Institution.lblSave</button>
                </div>
            </div>
            <div id="Overlaydiv" class="esg-modal-overlay" style="display:none; position:fixed; top:0; bottom:0; left:0; right:0;"></div>
            <div id="Processing" class="esg-modal-dialog" style="display:none;">
                <div class="esg-spinner-wrapper" style="position:absolute;">
                    <div class="esg-spinner"></div>
                </div>
            </div>
        }
        else
        {
            <div class="esg-card--panel__body">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <span class="esg-h4">
                        @WebAdminUI.Resources.ElectronicDegree.Institution.lblNoInstitutions
                    </span><br /><br />
                </div>
            </div>
        }
    </div>

    @section Scripts{
        <script type="text/javascript">
            var urlSaveCourses = '@Url.Action("Save", "AcademicPlans")';
            var urlAcademicPlanIndex = '@Url.Action("Index", "AcademicPlans")';
            var urlUnauthorized = '@Url.RouteUrl("ErrorUnauthorized")';
        </script>
        @Scripts.Render("~/bundles/EC/Courses")
    }
}